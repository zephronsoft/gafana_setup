# ==============================================
# Facebook/Meta Monitoring Stack Configuration
# No SSL - Internal SMTP Setup
# ==============================================

# Admin Credentials
ADMIN_USER=admin
ADMIN_PASSWORD=

# PostgreSQL Database
POSTGRES_USER=grafana
POSTGRES_PASSWORD=

# Grafana Security
GRAFANA_SECRET_KEY=

# SMTP Configuration for Alerting
# Development: MailHog (included in stack)
# Production: Postfix (internal SMTP server)
MAIL_DOMAIN=monitoring.local
SMTP_USER=monitoring@monitoring.local
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=noreply@monitoring.local
SMTP_HOST=postfix:587
SMTP_PORT=587

# Slack Integration
SLACK_API_URL=
SLACK_CHANNEL=#platform-reliability
SLACK_USERNAME=FB-Monitoring

# Microsoft Teams (Alternative)
TEAMS_WEBHOOK_URL=

# PagerDuty Integration
PAGERDUTY_INTEGRATION_KEY=
PAGERDUTY_SERVICE_KEY=

# Datadog Integration (Optional)
DATADOG_API_KEY=
DATADOG_APP_KEY=

# Monitoring Retention
PROMETHEUS_RETENTION_TIME=30d
PROMETHEUS_RETENTION_SIZE=50GB
LOKI_RETENTION_PERIOD=30d

# Performance Tuning
PROMETHEUS_MAX_CONCURRENCY=50
PROMETHEUS_MAX_SAMPLES=50000000
GRAFANA_MAX_CONCURRENT_QUERIES=10

# Environment Settings
ENVIRONMENT=development
COMPANY=facebook
TEAM=platform-reliability
DATACENTER=east-1

# External URLs (No SSL)
GRAFANA_DOMAIN=grafana.localhost
PROMETHEUS_DOMAIN=prometheus.localhost
ALERTMANAGER_DOMAIN=alertmanager.localhost
LOKI_DOMAIN=loki.localhost
JAEGER_DOMAIN=jaeger.localhost
MAILHOG_DOMAIN=mailhog.localhost

# Security
ENABLE_RBAC=true
ENABLE_AUDIT_LOGS=true
ENABLE_2FA=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_S3_BUCKET=fb-monitoring-backups
BACKUP_RETENTION_DAYS=90

# Log Levels
LOG_LEVEL=warn
GRAFANA_LOG_LEVEL=warn
PROMETHEUS_LOG_LEVEL=warn
ALERTMANAGER_LOG_LEVEL=warn 